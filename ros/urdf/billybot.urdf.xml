<?xml version="1.0"?>
<robot name="billybot">
  <!-- Base footprint (ground plane) -->
  <link name="base_footprint"/>

  <!-- Chassis -->
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.30 0.25 0.10"/>
      </geometry>
      <material name="chassis">
        <color rgba="0.2 0.2 0.25 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.30 0.25 0.10"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
    </inertial>
  </link>

  <!-- Wheels: cylinder r=0.05, length=0.04 -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <material name="wheel"><color rgba="0.3 0.3 0.3 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.10 0.15 -0.025" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.1"/>
  </joint>

  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <material name="wheel"><color rgba="0.3 0.3 0.3 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.10 -0.15 -0.025" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.1"/>
  </joint>

  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <material name="wheel"><color rgba="0.3 0.3 0.3 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.10 0.15 -0.025" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.1"/>
  </joint>

  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <material name="wheel"><color rgba="0.3 0.3 0.3 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.10 -0.15 -0.025" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.01" friction="0.1"/>
  </joint>

  <!-- Arm base (fixed on top of chassis) -->
  <link name="arm_base_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.02"/>
      </geometry>
      <material name="arm"><color rgba="0.4 0.4 0.5 1"/></material>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="arm_base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="arm_base_link"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
  </joint>

  <!-- Pan joint (z-axis, ±π rad) -->
  <link name="arm_pan_link">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.03"/>
      </geometry>
      <material name="arm"><color rgba="0.4 0.4 0.5 1"/></material>
    </visual>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>
  <joint name="arm_pan_joint" type="revolute">
    <parent link="arm_base_link"/>
    <child link="arm_pan_link"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="1.0" velocity="1.0"/>
    <dynamics damping="0.01" friction="0.05"/>
  </joint>

  <!-- Tilt joint (y-axis, ±π/2 rad) -->
  <link name="arm_tilt_link">
    <visual>
      <geometry>
        <box size="0.03 0.02 0.04"/>
      </geometry>
      <material name="arm"><color rgba="0.4 0.4 0.5 1"/></material>
    </visual>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>
  <joint name="arm_tilt_joint" type="revolute">
    <parent link="arm_pan_link"/>
    <child link="arm_tilt_link"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="1.0" velocity="1.0"/>
    <dynamics damping="0.01" friction="0.05"/>
  </joint>

  <!-- Camera link (fixed on tilt head) -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.02 0.04 0.02"/>
      </geometry>
      <material name="camera"><color rgba="0.1 0.1 0.1 1"/></material>
    </visual>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="arm_tilt_link"/>
    <child link="camera_link"/>
    <origin xyz="0 0 0.03" rpy="0 0 0"/>
  </joint>

  <!-- IMU link (fixed on base) -->
  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="imu"><color rgba="0.2 0.6 0.2 1"/></material>
    </visual>
  </link>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
  </joint>
</robot>
